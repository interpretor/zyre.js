{
  "name": "zyre.js",
  "version": "1.1.0",
  "description": "Node.js port of Zyre - an open-source framework for proximity-based peer-to-peer applications",
  "main": "index.js",
  "scripts": {
    "test": "mocha --slow 700 --timeout 1400 --use_strict --check-leaks --throw-deprecation",
    "precoverage": "nyc npm test",
    "coverage": "nyc report --reporter=text-lcov > coverage/codecov.lcov",
    "build:docs": "jsdoc -R README.md -d docs lib/*.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/interpretor/zyre.js.git"
  },
  "keywords": [
    "zyre",
    "zre",
    "zeromq",
    "zmq",
    "libzmq",
    "p2p",
    "peer",
    "peer-to-peer"
  ],
  "author": "Sebastian Rager <mail@interpretor.net>",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/interpretor/zyre.js/issues"
  },
  "homepage": "https://github.com/interpretor/zyre.js#readme",
  "dependencies": {
    "debug": "^2.6.8",
    "uuid": "^3.1.0",
    "zeromq": "^4.5.0"
  },
  "devDependencies": {
    "chai": "^4.1.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "jsdoc": "^3.5.3",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3"
  },
  "greenkeeper": {
    "ignore": [
      "eslint",
      "eslint-config-airbnb",
      "eslint-plugin-import",
      "eslint-plugin-jsx-a11y",
      "eslint-plugin-react"
    ]
  },
  "engines": {
    "node": ">=6.5.0"
  }
}
